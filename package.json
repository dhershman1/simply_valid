{
  "name": "simply_valid",
  "version": "4.0.0",
  "description": "a simple data driven validation utility library",
  "main": "dist/simply-valid.min.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prepack": "rollup -c && rollup -c rollup.config.split.js && node scripts/docs.js",
    "postpack": "npm run clean",
    "build:split": "rollup -c rollup.config.split.js",
    "build": "rollup -c",
    "clean": "node scripts/clean.js",
    "postpublish": "npm run clean",
    "test": "tape -r esm tests/*.js | tap-spec",
    "test:cov": "nyc npm test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard ./src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhershman1/simply_valid.git"
  },
  "keywords": [
    "validation",
    "simple",
    "data",
    "simply",
    "valid",
    "frontend",
    "JS"
  ],
  "author": "Dustin Hershman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/simply_valid/issues"
  },
  "homepage": "https://github.com/dhershman1/simply_valid",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.46",
    "@babel/plugin-external-helpers": "7.0.0-beta.46",
    "@babel/preset-env": "7.0.0-beta.46",
    "@babel/preset-stage-2": "7.0.0-beta.46",
    "coveralls": "3.0.1",
    "del": "3.0.0",
    "esm": "3.0.37",
    "globby": "8.0.1",
    "jsdoc-to-markdown": "3.0.3",
    "nyc": "11.8.0",
    "rollup": "0.57.0",
    "rollup-plugin-babel": "4.0.0-beta.4",
    "rollup-plugin-cleanup": "3.0.0-beta.1",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-uglify": "3.0.0",
    "standard": "11.0.1",
    "tap-spec": "4.1.1",
    "tape": "4.9.0"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "standard": {
    "ignore": [
      "dist/*",
      "docs.js"
    ]
  }
}
