{
  "name": "simply_valid",
  "version": "3.2.2",
  "description": "a simple data driven validation utility library",
  "main": "main/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prepack": "rollup -c && node scripts/docs.js",
    "postpack": "npm run clean",
    "build": "rollup -c",
    "clean": "node scripts/clean.js",
    "postpublish": "npm run clean",
    "test:watch": "ava --watch",
    "test": "ava",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhershman1/simply_valid.git"
  },
  "keywords": [
    "validation",
    "simple",
    "data",
    "simply",
    "valid",
    "frontend",
    "JS"
  ],
  "author": "Dustin Hershman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/simply_valid/issues"
  },
  "homepage": "https://github.com/dhershman1/simply_valid",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.41",
    "@babel/plugin-external-helpers": "7.0.0-beta.41",
    "@babel/preset-env": "7.0.0-beta.41",
    "@babel/preset-stage-2": "7.0.0-beta.41",
    "@babel/register": "7.0.0-beta.41",
    "ava": "1.0.0-beta.3",
    "del": "3.0.0",
    "eslint": "4.18.2",
    "globby": "8.0.1",
    "jsdoc-to-markdown": "3.0.3",
    "rollup": "0.57.0",
    "rollup-plugin-babel": "4.0.0-beta.2",
    "rollup-plugin-uglify": "3.0.0"
  },
  "ava": {
    "files": [
      "src/**/tests.js"
    ],
    "require": [
      "@babel/register"
    ],
    "failFast": true,
    "concurrency": 5,
    "babel": {
      "testOptions": {
        "presets": [
          "@ava/transform-test-files",
          "@ava/stage-4"
        ]
      }
    }
  }
}
