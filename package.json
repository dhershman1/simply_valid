{
  "name": "simply_valid",
  "version": "3.1.0",
  "description": "a simple data driven validation utility library",
  "main": "index.js",
  "module": "esm/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prepare": "npm run run:build",
    "compile:tests:main": "rollup -i src/index.js -o src/tests/dist/index.cjs.js -f cjs -g tape",
    "compile:tests:has": "rollup -i src/has/tests.js -o src/tests/dist/has.cjs.js -f cjs -g tape",
    "compile:tests:is": "rollup -i src/is/tests.js -o src/tests/dist/is.cjs.js -f cjs -g tape",
    "compile:tests:internals": "rollup -i src/_internals/tests.js -o src/tests/dist/internals.cjs.js -f cjs -g tape",
    "compile:tests:meets": "rollup -i src/meets/tests.js -o src/tests/dist/meets.cjs.js -f cjs -g tape",
    "broken:multi": "rollup -i src/multi/tests.js -o src/tests/dist/multi.cjs.js -f cjs -g tape",
    "compile:tests:no": "rollup -i src/no/tests.js -o src/tests/dist/no.cjs.js -f cjs -g tape",
    "build:has": "rollup --config configs/rollup.has.config.js",
    "build:is": "rollup --config configs/rollup.is.config.js",
    "build:meets": "rollup --config configs/rollup.meets.config.js",
    "build:no": "rollup --config configs/rollup.no.config.js",
    "build:main": "rollup --config configs/rollup.main.config.js",
    "build:esm": "rollup --config configs/rollup.esm.config.js",
    "run:build": "npm-run-all --parallel build:*",
    "test:internals": "npm run compile:internals && tape src/tests/dist/internals.cjs.js | tap-spec",
    "test:all": "tape src/tests/{dist/*.cjs.js,tests.js} | tap-spec",
    "test": "npm-run-all --parallel compile:tests:* && npm run test:all",
    "cleanup": "rimraf {esm,has,is,meets,no,index.js}",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhershman1/simply_valid.git"
  },
  "keywords": [
    "validation",
    "simple",
    "data",
    "simply",
    "valid",
    "frontend",
    "JS"
  ],
  "author": "Dustin Hershman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/simply_valid/issues"
  },
  "homepage": "https://github.com/dhershman1/simply_valid",
  "devDependencies": {
    "npm-run-all": "4.1.1",
    "rimraf": "^2.6.2",
    "rollup": "0.50.0",
    "rollup-plugin-buble": "0.16.0",
    "rollup-plugin-uglify": "2.0.1",
    "tap-spec": "4.1.1",
    "tape": "4.8.0"
  }
}
